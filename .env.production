# Production Environment Configuration
# Quantum-Inspired Task Planner

# =============================================================================
# QUANTUM BACKEND CONFIGURATION
# =============================================================================

# D-Wave Configuration
DWAVE_API_TOKEN=your_dwave_token_here
DWAVE_SOLVER=Advantage_system6.1
DWAVE_NUM_READS=1000
DWAVE_CHAIN_STRENGTH=2.0
DWAVE_ANNEAL_TIME=20

# IBM Quantum Configuration  
IBM_QUANTUM_TOKEN=your_ibm_token_here
IBM_QUANTUM_HUB=your_hub
IBM_QUANTUM_GROUP=your_group
IBM_QUANTUM_PROJECT=your_project
IBM_QUANTUM_BACKEND=ibmq_qasm_simulator

# Azure Quantum Configuration
AZURE_QUANTUM_SUBSCRIPTION_ID=your_subscription_id
AZURE_QUANTUM_RESOURCE_GROUP=your_resource_group
AZURE_QUANTUM_WORKSPACE=your_workspace_name
AZURE_QUANTUM_LOCATION=westus
AZURE_QUANTUM_PROVIDER=microsoft.simulatedannealing

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENV=production
DEBUG=false
LOG_LEVEL=info

# Performance Tuning
MAX_PROBLEM_SIZE=100
FALLBACK_THRESHOLD=20
TIMEOUT_SECONDS=300
CACHE_TTL_SECONDS=3600

# Scaling Configuration
MAX_CONCURRENT_JOBS=10
WORKER_THREADS=4
MEMORY_LIMIT_MB=2048

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Metrics Collection
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_ENDPOINT=/metrics
PROMETHEUS_GATEWAY=http://prometheus-pushgateway:9091

# Distributed Tracing
ENABLE_TRACING=true
JAEGER_AGENT_HOST=jaeger-agent
JAEGER_AGENT_PORT=6831
TRACE_SAMPLING_RATE=0.1

# Logging
LOG_FORMAT=json
LOG_OUTPUT=stdout
STRUCTURED_LOGGING=true
CORRELATION_ID_HEADER=X-Correlation-ID

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
READINESS_PROBE_PATH=/health/ready
LIVENESS_PROBE_PATH=/health/live

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Security
API_KEY_REQUIRED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Encryption
ENABLE_TLS=true
TLS_CERT_PATH=/etc/certs/tls.crt
TLS_KEY_PATH=/etc/certs/tls.key
ENCRYPT_SENSITIVE_DATA=true

# Data Protection
SANITIZE_LOGS=true
MASK_CREDENTIALS=true
AUDIT_LOG_ENABLED=true

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# Redis (for caching and job queues)
REDIS_URL=redis://redis-cluster:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB_CACHE=0
REDIS_DB_JOBS=1
REDIS_CLUSTER_MODE=true

# Object Storage (for large problem data)
S3_BUCKET=quantum-planner-data
S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# =============================================================================
# NOTIFICATION & ALERTING
# =============================================================================

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#quantum-alerts
ALERT_ON_ERRORS=true
ALERT_ON_PERFORMANCE_DEGRADATION=true

# Email Notifications
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USERNAME=alerts@your-domain.com
SMTP_PASSWORD=your_smtp_password
ALERT_EMAIL_TO=ops-team@your-domain.com

# =============================================================================
# FRAMEWORK INTEGRATIONS
# =============================================================================

# CrewAI Configuration
CREWAI_DEFAULT_BACKEND=quantum
CREWAI_FALLBACK_ENABLED=true
CREWAI_MAX_AGENTS=50

# AutoGen Configuration
AUTOGEN_CONVERSATION_TIMEOUT=600
AUTOGEN_MAX_PARTICIPANTS=20
AUTOGEN_QUANTUM_OPTIMIZATION=true

# LangChain Configuration
LANGCHAIN_CHAIN_TIMEOUT=300
LANGCHAIN_MAX_CHAIN_LENGTH=10
LANGCHAIN_ASYNC_ENABLED=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Container Configuration
CONTAINER_PORT=8080
GRACEFUL_SHUTDOWN_TIMEOUT=30
MAX_REQUEST_SIZE_MB=10

# Load Balancing
STICKY_SESSIONS=false
SESSION_AFFINITY=none
BACKEND_TIMEOUT=60

# Auto-scaling
MIN_REPLICAS=2
MAX_REPLICAS=10
CPU_TARGET_UTILIZATION=70
MEMORY_TARGET_UTILIZATION=80

# =============================================================================
# DEVELOPMENT OVERRIDES (for staging)
# =============================================================================

# Uncomment for staging environment
# ENV=staging
# DEBUG=true
# LOG_LEVEL=debug
# DWAVE_SOLVER=DW_2000Q_6  # Smaller, cheaper solver for testing
# MAX_PROBLEM_SIZE=50      # Reduced limits for staging
# ENABLE_PROFILING=true    # Performance profiling
# MOCK_QUANTUM_BACKENDS=true  # Use simulators instead of real hardware